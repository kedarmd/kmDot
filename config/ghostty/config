# Theme and Font

theme = "Catppuccin Mocha"
font-family = "JetBrainsMono Nerd Font"

# To hide the top bar

gtk-titlebar = false
window-decoration = false
gtk-tabs-location = bottom
gtk-wide-tabs = false
cursor-style-blink = false
shell-integration-features = no-cursor
shell-integration-features = no-title, no-cursor

# KEYBINDS

# **Keybinds for Tabs**

keybind = ctrl+s>c=new_tab
keybind = ctrl+s>n=next_tab
keybind = ctrl+s>p=previous_tab
keybind = ctrl+s>1=goto_tab:1
keybind = ctrl+s>2=goto_tab:2
keybind = ctrl+s>3=goto_tab:3
keybind = ctrl+s>4=goto_tab:4
keybind = ctrl+s>5=goto_tab:5
keybind = ctrl+s>6=goto_tab:6
keybind = ctrl+s>7=goto_tab:7
keybind = ctrl+s>8=goto_tab:8
keybind = ctrl+s>9=goto_tab:9
keybind = ctrl+escape=toggle_tab_overview
keybind = ctrl+w=close_surface

# **Keybinds for Panes and Splits**

keybind = ctrl+shift+o=new_split:down
keybind = ctrl+shift+l=new_split:right
keybind = ctrl+s>z=toggle_split_zoom
keybind = ctrl+left=goto_split:left
keybind = ctrl+right=goto_split:right
keybind = ctrl+down=goto_split:bottom
keybind = ctrl+up=goto_split:top
keybind = ctrl+s>e=equalize_splits
keybind = ctrl+s>x=close_surface
